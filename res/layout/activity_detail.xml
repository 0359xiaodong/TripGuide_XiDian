<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailActivity" >

    <Button
        android:id="@+id/button_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="选为终点" />

    <ImageView
        android:id="@+id/pic_detail_bottom"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:paddingLeft="2dp"
        android:layout_alignLeft="@+id/button_set"
        android:layout_below="@+id/button_set"
        android:src="@drawable/detailforbottom" />

    <ImageView
        android:id="@+id/pic_crop"
        android:layout_width="122dp"
        android:layout_height="199dp"
        android:paddingLeft="9dp"
        android:paddingTop="15dp"
        android:layout_alignBottom="@+id/pic_detail_bottom"
        android:layout_alignLeft="@+id/button_set"
        android:src="@drawable/cropdongdajie" />

    <ImageView
        android:id="@+id/pic_bottom_name"
        android:layout_width="135dp"
        android:layout_height="165dp"
        android:layout_alignRight="@+id/button_set"
        android:layout_alignTop="@+id/pic_detail_bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/pic_detail_bottom"
        android:src="@drawable/detailpicforname" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_alignLeft="@+id/pic_bottom_name"
        android:layout_alignTop="@+id/pic_bottom_name"
        android:layout_marginTop="15dp"
        android:text="地点"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/detail_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pic_bottom_name"
        android:layout_below="@+id/detail_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:text="XX区 XX路" />

    <TextView
        android:id="@+id/detail_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detail_area"
        android:layout_below="@+id/detail_area"
        android:layout_marginTop="6dp"
        android:textSize="13dp"
        android:text="距离" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detail_distance"
        android:layout_below="@+id/detail_distance"
        android:layout_marginTop="6dp"
        android:textSize="13dp"
        android:text="到达需用时间" />

    

    <TextView
        android:id="@+id/pos_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 	  android:background="@drawable/textview_style_gray"
        android:layout_below="@+id/pic_detail_bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:text="详情" />

</RelativeLayout>